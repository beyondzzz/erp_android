<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <RelativeLayout
        android:id="@+id/order_pay_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/trans_30px">

        <!--<ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/trans_10px"
            android:src="@drawable/shoplist_return"
            android:layout_centerVertical="true"/>-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="订单结果"
            android:textColor="@color/trans_333333"
            android:textSize="@dimen/text_trans_35px" />
    </RelativeLayout>

    <TextView
        android:id="@+id/order_pay_title_fg"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/order_pay_title"
        android:background="@color/cutOffRule" />

    <ImageView
        android:id="@+id/iv_result_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_pay_title_fg"
        android:layout_marginTop="50dp"
        android:src="@drawable/icon_success_l" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_result_pay"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:text="@string/text_result_success"
        android:textColor="@color/trans_333333"
        android:textSize="@dimen/text_trans_32px" />

    <TextView
        android:id="@+id/tv_succsess_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_result"
        android:layout_marginTop="@dimen/trans_25px"
        android:paddingRight="@dimen/trans_30px"
        android:paddingLeft="@dimen/trans_30px"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:lines="2"
        android:text="您的订单（订单号：1234567812345）已支付成功并提交仓库备货"
        android:textSize="@dimen/text_trans_27px"
        android:textColor="@color/moreText"/>
    <LinearLayout
        android:id="@+id/pic_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/tv_succsess_num"
        android:layout_marginTop="@dimen/trans_50px"
        android:gravity="center">
        <ImageView
            android:id="@+id/pic_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/pic_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/trans_40px"/>

    </LinearLayout>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pic_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/trans_100px"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_text_grey_border"
            android:button="@null"
            android:checked="true"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="@dimen/dp_10"
            android:text="返回首页"
            android:textColor="@color/trans_333333"
            android:textSize="@dimen/text_trans_27px"/>

        <RadioButton
            android:id="@+id/rb_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/bg_text_green_border"
            android:button="@null"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="@dimen/dp_10"
            android:text="查看订单"
            android:textColor="@color/checkGreenColor"
            android:textSize="@dimen/text_trans_27px" />
    </RadioGroup>

</RelativeLayout>
