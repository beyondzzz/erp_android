<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/trans_50px"
        android:layout_marginRight="@dimen/trans_50px"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/trans_15px"
            >

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/trans_45px"
                android:text="发票须知"
                android:textColor="@color/black"
                android:textSize="@dimen/text_trans_36px"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/tv_title"
                android:background="@color/cutOffRule" />

            <TextView
                android:id="@+id/tv_online_pay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/trans_200px"
                android:layout_below="@+id/tv_line"
                android:layout_marginTop="@dimen/trans_50px"
                android:paddingLeft="16dp"
                android:text="内容待定"
                android:textColor="@color/black"
                android:textSize="@dimen/text_trans_32px" />


            <TextView
                android:id="@+id/tv_know"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_online_pay"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/text_shape_orange"
                android:paddingBottom="@dimen/trans_15px"
                android:paddingLeft="@dimen/trans_100px"
                android:paddingRight="@dimen/trans_100px"
                android:paddingTop="@dimen/trans_15px"
                android:text="知道了"
                android:textColor="@color/checkGreenColor"
                android:textSize="@dimen/text_trans_32px" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>
