<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/shop_cart_activity_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_full_reduction"
        android:gravity="center"
        android:text="满减"
        android:textColor="@color/red"
        android:textSize="@dimen/text_trans_22px"
        android:layout_marginRight="@dimen/trans_20px"
        />

    <TextView
        android:id="@+id/goods_activity_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/trans_25px"
        android:text="满99元减20"
        android:textColor="@color/trans_333333"
        android:textSize="@dimen/text_trans_27px" />
</LinearLayout>
