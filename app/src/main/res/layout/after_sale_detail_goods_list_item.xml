<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingLeft="@dimen/trans_20px"
    android:paddingRight="@dimen/trans_20px">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/trans_20px"
    android:layout_marginBottom="@dimen/trans_20px">
    <ImageView
        android:id="@+id/goods_img"
        android:layout_width="@dimen/trans_100px"
        android:layout_height="@dimen/trans_100px"
        android:src="@drawable/img_steamed" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/trans_30px">

        <TextView
            android:id="@+id/goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="乐肴居冰皮麻糬（芒果慕斯味)"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_trans_27px"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/price_unit_total"
            android:layout_marginRight="@dimen/trans_100px"/>


        <TextView
            android:id="@+id/goods_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="284.04"
            android:textColor="@color/font_grey"
            android:textSize="@dimen/text_trans_30px" />

        <TextView
            android:id="@+id/price_unit_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/goods_total_price"
            android:text="¥"
            android:textColor="@color/font_grey"
            android:textSize="@dimen/text_trans_30px" />

        <TextView
            android:id="@+id/my_order_goods_specification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格："
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/text_trans_24px"
            android:textColor="@color/font_grey"
            android:layout_marginRight="@dimen/trans_10px"/>
        <TextView
            android:id="@+id/goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19"
            android:textColor="@color/font_grey"
            android:textSize="@dimen/text_trans_24px"
            android:layout_toRightOf="@id/my_order_goods_specification"
            android:layout_alignBottom="@id/my_order_goods_specification"/>

        <TextView
            android:id="@+id/price_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/goods_price"
            android:text="¥"
            android:textColor="@color/font_grey"
            android:textSize="@dimen/text_trans_24px"
            android:layout_alignBottom="@id/goods_price"/>


        <TextView
            android:id="@+id/num_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数量："
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/text_trans_24px"
            android:textColor="@color/font_grey"
            android:layout_toRightOf="@id/goods_price"
            android:layout_marginLeft="@dimen/text_trans_80px"/>
        <TextView
            android:id="@+id/flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/num_title"
            android:textSize="@dimen/text_trans_24px"
            android:textColor="@color/font_grey"
            android:layout_marginRight="@dimen/trans_10px" />
        <TextView
            android:id="@+id/my_order_goods_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_toRightOf="@id/flag"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

</LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/cutOffrule" />


</LinearLayout>
