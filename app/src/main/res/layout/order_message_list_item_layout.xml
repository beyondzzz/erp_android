<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ashenBackgroundColor"
    android:orientation="vertical"
    android:paddingLeft="@dimen/trans_20px"
    android:paddingRight="@dimen/trans_20px">

    <TextView
        android:id="@+id/order_message_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/trans_35px"
        android:layout_marginBottom="@dimen/trans_20px"
        android:gravity="center_horizontal"
        android:text="7月10日 10:00"
        android:textColor="@color/trans_666666"
        android:textSize="@dimen/text_trans_24px" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/order_no_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="【"
            android:textSize="@dimen/text_trans_27px"
            android:textColor="@color/trans_666666"
            android:layout_marginLeft="@dimen/trans_35px"
            android:layout_marginTop="@dimen/trans_15px"
            android:layout_marginBottom="@dimen/trans_15px"
            />
        <TextView
            android:id="@+id/order_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号"
            android:textSize="@dimen/text_trans_27px"
            android:textColor="@color/trans_666666"
            android:layout_toRightOf="@id/order_no_left"
            android:layout_alignTop="@id/order_no_left"
            />
        <TextView
            android:id="@+id/order_no_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="】"
            android:textSize="@dimen/text_trans_27px"
            android:textColor="@color/trans_666666"
            android:layout_toRightOf="@id/order_no"
            android:layout_alignTop="@id/order_no_left"
            />
        <TextView
            android:id="@+id/fg_1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/cutOffRule"
            android:layout_below="@id/order_no_left"
            />
        <TextView
            android:id="@+id/order_state_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最新状态："
            android:textSize="@dimen/text_trans_32px"
            android:textColor="@color/trans_333333"
            android:layout_below="@id/fg_1"
            android:layout_marginLeft="@dimen/trans_35px"
            android:layout_marginTop="@dimen/trans_30px"
            android:layout_marginBottom="@dimen/trans_30px"
            />
        <TextView
            android:id="@+id/order_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已发货"
            android:textSize="@dimen/text_trans_32px"
            android:textColor="@color/trans_333333"
            android:layout_below="@id/fg_1"
            android:layout_toRightOf="@id/order_state_title"
            android:layout_alignTop="@id/order_state_title"
            />
        <TextView
            android:id="@+id/state_change_time_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="【状态更新时间："
            android:textSize="@dimen/text_trans_27px"
            android:textColor="@color/moreText"
            android:layout_below="@id/order_state_title"
            android:layout_marginLeft="@dimen/trans_20px"
            />
        <TextView
            android:id="@+id/state_change_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-01-01 10:10:00"
            android:textSize="@dimen/text_trans_27px"
            android:textColor="@color/moreText"
            android:layout_below="@id/order_state_title"
            android:layout_toRightOf="@id/state_change_time_left"
            />
        <TextView
            android:id="@+id/state_change_time_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="】"
            android:textSize="@dimen/text_trans_27px"
            android:textColor="@color/moreText"
            android:layout_below="@id/order_state_title"
            android:layout_toRightOf="@id/state_change_time"
            />
        <TextView
            android:id="@+id/fg_2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/cutOffRule"
            android:layout_below="@id/state_change_time"
            android:layout_marginTop="@dimen/trans_25px"
            />
        <RelativeLayout
            android:id="@+id/search_detail_rela"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fg_2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看详情"
                android:textSize="@dimen/text_trans_27px"
                android:textColor="@color/moreText"
                android:layout_marginLeft="@dimen/trans_35px"
                android:layout_marginTop="@dimen/trans_20px"
                android:layout_marginBottom="@dimen/trans_20px"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_return_meaage"
                android:layout_marginRight="@dimen/trans_20px"
                />
        </RelativeLayout>


    </RelativeLayout>
</LinearLayout>
