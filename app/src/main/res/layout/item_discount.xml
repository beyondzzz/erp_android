<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/trans_20px"
    >

    <RelativeLayout
        android:id="@+id/coupon_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/coupe_bg"
        android:paddingLeft="@dimen/trans_35px"
        >
        <RelativeLayout
            android:id="@+id/coupon_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/tv_discount_explain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/trans_333333"
                android:textSize="@dimen/text_trans_27px"
                android:layout_marginTop="@dimen/trans_45px"/>
            <!--<TextView-->
                <!--android:id="@+id/tv_coupon_explanation"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="@dimen/trans_10px"-->
                <!--android:text="@string/coupon_explanation"-->
                <!--android:textColor="@color/trans_333333"-->
                <!--android:textSize="@dimen/text_trans_27px"-->
                <!--android:layout_alignTop="@id/tv_discount_explain"-->
                <!--android:layout_toRightOf="@id/tv_discount_explain"-->
                <!--android:layout_toLeftOf="@id/tv_discount_money"-->
                <!--/>-->

            <TextView
                android:id="@+id/tv_discount_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/trans_60px"
                android:text="100"
                android:textColor="@color/red"
                android:textSize="@dimen/text_trans_48px"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/trans_30px"
                />
            <TextView
                android:id="@+id/tv_discount_money_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tv_discount_money"
                android:layout_alignBottom="@id/tv_discount_money"
                android:text="¥"
                android:textColor="@color/red"
                android:textSize="@dimen/trans_24px"
                android:layout_marginBottom="@dimen/trans_5px"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/coupon_name"
            android:layout_below="@+id/coupon_name"
            android:layout_marginTop="@dimen/trans_30px"
            android:paddingBottom="@dimen/trans_45px"
            >
            <TextView
                android:id="@+id/tv_discount_time_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018.08.08"
                android:textSize="@dimen/text_trans_24px"
                android:textColor="@color/trans_333333" />
            <TextView
                android:id="@+id/tv_discount_time_strip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_discount_time_start"
                android:text=" — "
                android:textSize="@dimen/text_trans_24px"
                android:textColor="@color/trans_333333"/>
            <TextView
                android:id="@+id/tv_discount_time_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_discount_time_strip"
                android:layout_alignTop="@id/tv_discount_time_start"
                android:text="2018.09.09"
                android:textSize="@dimen/text_trans_24px"
                android:textColor="@color/trans_333333"/>



            <TextView
                android:id="@+id/tv_discount_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/trans_50px"
                android:text="@string/app_name"
                android:textSize="@dimen/text_trans_24px"
                android:textColor="@color/moreText"/>
        </RelativeLayout>


    </RelativeLayout>



</RelativeLayout>
