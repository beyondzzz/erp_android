<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/shop_cart_activity_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/trans_20px"
        >
        <TextView
            android:id="@+id/shop_cart_activity_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_full_reduction"
            android:layout_marginLeft="@dimen/trans_35px"
            android:text="满减"
            android:textSize="@dimen/text_trans_22px"
            android:gravity="center"
            android:textColor="@color/red"
            />
        <TextView
            android:id="@+id/goods_activity_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/shop_cart_activity_type"
            android:text="购满2件，总价可打8.0折"
            android:textColor="@color/trans_333333"
            android:textSize="@dimen/text_trans_24px"
            android:layout_marginLeft="@dimen/trans_25px"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/goods_activity_more_info"
            />
        <TextView
            android:id="@+id/goods_activity_more_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/trans_40px"
            android:text="@string/more"
            android:textSize="@dimen/text_trans_22px"
            android:textColor="@color/red"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/shop_cart_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/trans_20px"
        android:layout_marginBottom="@dimen/trans_20px"
        android:layout_below="@id/shop_cart_activity_item"
        android:layout_toLeftOf="@id/shop_cart_list_item_delete"
        >
        <CheckBox
            android:id="@+id/shop_cart_list_item_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_trans_24px"
            android:textColor="@color/trans_333333"
            style="@style/ShopcartCheckboxTheme"
            android:layout_centerVertical="true"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/shop_cart_list_item_checkbox"
            >
            <RelativeLayout
                android:id="@+id/shop_cart_list_item_goods_img_rela"
                android:layout_width="@dimen/trans_170px"
                android:layout_height="@dimen/trans_170px">

                <ImageView
                    android:id="@+id/shop_cart_list_item_goods_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/img_steamed" />
                <TextView
                    android:id="@+id/shop_cart_list_item_no_goods"
                    android:layout_width="@dimen/trans_120px"
                    android:layout_height="@dimen/trans_120px"
                    android:background="@drawable/no_goods"
                    android:layout_centerInParent="true"
                    android:text="@string/no_goods"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_trans_24px"
                    android:gravity="center"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/shop_cart_list_item_undercarriage"
                    android:layout_width="@dimen/trans_120px"
                    android:layout_height="@dimen/trans_120px"
                    android:background="@drawable/no_goods"
                    android:layout_centerInParent="true"
                    android:text="失效"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_trans_24px"
                    android:gravity="center"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/shop_cart_list_item_leavings_stock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_rectangle"
                    android:layout_alignParentBottom="true"
                    android:text="仅剩1件"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_trans_24px"
                    />

            </RelativeLayout>

            <TextView
                android:id="@+id/shop_cart_list_item_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/shop_cart_list_item_goods_img_rela"
                android:text="乐肴居冰皮麻糬(芒果慕斯味)"
                android:textColor="@color/black"
                android:textSize="@dimen/text_trans_30px"
                android:layout_marginLeft="@dimen/trans_35px"
                android:layout_marginRight="@dimen/trans_15px"
                android:singleLine="true"

                />
            <TextView
                android:id="@+id/shop_cart_list_item_goods_specifiction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/shop_cart_list_item_goods_name"
                android:layout_alignLeft="@id/shop_cart_list_item_goods_name"
                android:text="50克*10个*12袋/箱"
                android:textColor="@color/black"
                android:textSize="@dimen/text_trans_30px"
                android:layout_marginRight="@dimen/trans_15px"
                android:singleLine="true"
                android:layout_marginTop="@dimen/trans_10px"
                android:visibility="gone"
                />
            <RelativeLayout
                android:id="@+id/shop_cart_choose_goods_spec_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/shop_cart_list_item_goods_name"
                android:layout_alignLeft="@id/shop_cart_list_item_goods_name"
                android:layout_marginRight="@dimen/trans_20px"
                android:background="@color/ashenBackgroundColor"
                android:layout_marginTop="@dimen/trans_10px"
                android:padding="@dimen/trans_5px"
                >
                <ImageView
                    android:id="@+id/choose_goods_spec_right_down"
                    android:layout_width="@dimen/trans_20px"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/down"
                    android:layout_marginRight="@dimen/trans_10px"
                    android:layout_marginLeft="@dimen/trans_10px"
                    />

                <TextView
                    android:id="@+id/shop_cart_edit_goods_spec_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/specification"
                    android:textSize="@dimen/text_trans_24px"
                    android:textColor="@color/font_grey"
                    />
                <TextView
                    android:id="@+id/shop_cart_edit_goods_spec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="乐肴居冰皮麻糬规格0"
                    android:textSize="@dimen/text_trans_24px"
                    android:textColor="@color/font_grey"
                    android:layout_toLeftOf="@id/choose_goods_spec_right_down"
                    android:layout_toRightOf="@id/shop_cart_edit_goods_spec_name"
                    android:singleLine="true"
                    />
            </RelativeLayout>


            <TextView
                android:id="@+id/shop_cart_list_item_goods_money_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textSize="@dimen/text_trans_30px"
                android:textColor="@color/orange"
                android:layout_alignBottom="@id/shop_cart_list_item_goods_img_rela"
                android:layout_alignLeft="@id/shop_cart_list_item_goods_name"
                />
            <TextView
                android:id="@+id/shop_cart_list_item_goods_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="284.04"
                android:textSize="@dimen/text_trans_30px"
                android:textColor="@color/orange"
                android:layout_alignBottom="@id/shop_cart_list_item_goods_img_rela"
                android:layout_toRightOf="@id/shop_cart_list_item_goods_money_unit"
                />
            <TextView
                android:id="@+id/shop_cart_list_item_goods_old_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥300"
                android:layout_alignBottom="@id/shop_cart_list_item_goods_money_unit"
                android:layout_toRightOf="@id/shop_cart_list_item_goods_money"
                android:layout_marginLeft="@dimen/trans_20px"
                android:textSize="@dimen/text_trans_24px"
                android:textColor="@color/moreText"
                />
            <RelativeLayout
                android:id="@+id/shop_cart_list_item_change_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/shop_cart_list_item_goods_img_rela"
                android:layout_toRightOf="@id/shop_cart_list_item_goods_old_money"
                >
                <TextView
                    android:id="@+id/tv_reduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/shop_cart_goods_buy_num"
                    android:background="@drawable/text_reduce_shape"
                    android:paddingLeft="@dimen/trans_15px"
                    android:paddingRight="@dimen/trans_15px"
                    android:text="—"
                    android:textColor="@color/trans_333333"
                    android:textSize="@dimen/trans_35px"
                    android:paddingTop="0.5dp"
                    />

                <TextView
                    android:id="@+id/shop_cart_goods_buy_num"
                    android:layout_width="@dimen/trans_80px"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/tv_add"
                    android:background="@drawable/text_num_shape"
                    android:gravity="center"
                    android:paddingLeft="@dimen/trans_15px"
                    android:paddingRight="@dimen/trans_15px"
                    android:layout_alignTop="@id/tv_reduce"
                    android:layout_alignBottom="@id/tv_add"
                    android:text="500"
                    android:textColor="@color/trans_333333"
                    android:textSize="@dimen/trans_24px" />

                <TextView
                    android:id="@+id/tv_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/text_add_shape"
                    android:paddingLeft="@dimen/trans_20px"
                    android:paddingRight="@dimen/trans_20px"
                    android:text="+"
                    android:textColor="@color/trans_333333"
                    android:textSize="@dimen/trans_35px"
                    android:layout_marginRight="@dimen/trans_15px"
                    android:paddingTop="0.5dp"/>
                <TextView
                    android:id="@+id/goods_spec_strock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="0"
                    />
            </RelativeLayout>


        </RelativeLayout>


    </RelativeLayout>
    <TextView
        android:id="@+id/shop_cart_list_item_delete"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/trans_210px"
        android:text="@string/delete"
        android:textColor="@color/white"
        android:textSize="@dimen/text_trans_32px"
        android:background="@color/checkGreenColor"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:paddingLeft="@dimen/trans_25px"
        android:paddingRight="@dimen/trans_25px"
        android:visibility="gone"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/cutOffrule"
        android:layout_below="@id/shop_cart_item_content"
        />
</RelativeLayout>
