<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    >

    <RelativeLayout
        android:id="@+id/check_brand_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/goods_check_button_xs"
        android:layout_marginLeft="@dimen/trans_10px"
        android:layout_marginBottom="@dimen/trans_15px"
        android:layout_marginTop="@dimen/trans_15px"
        android:layout_marginRight="@dimen/trans_10px"
        >
        <ImageView
            android:id="@+id/brand_checkmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/checkmark"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/trans_15px"
            android:layout_marginRight="@dimen/trans_5px"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/brand_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天天果园"
            android:layout_centerInParent="true"
            android:textSize="@dimen/text_trans_24px"
            android:textColor="@color/basic_wheelview_color"
            android:singleLine="true"
            android:layout_toRightOf="@id/brand_checkmark"

            />
        <TextView
            android:id="@+id/classifity_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:visibility="gone"
            />
    </RelativeLayout>



</LinearLayout>
