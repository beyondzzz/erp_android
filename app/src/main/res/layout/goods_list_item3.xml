<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/cutOffRule"
        tools:ignore="Suspicious0dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/goods_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/trans_345px"
            android:layout_gravity="center"
            android:scaleType="centerInside"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/goods_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="正经香菇20kg"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_trans_26px"
                android:layout_marginTop="@dimen/trans_20px"
                android:layout_marginBottom="@dimen/trans_15px"
                android:layout_marginLeft="@dimen/trans_25px"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/price_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/goods_name"
                android:layout_alignStart="@id/goods_name"
                android:text="¥"
                android:textColor="@color/orangePriceColor"
                android:textSize="@dimen/text_trans_30px" />

            <TextView
                android:id="@+id/goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/goods_name"
                android:layout_toRightOf="@id/price_unit"
                android:text="16.8"
                android:textColor="@color/orangePriceColor"
                android:textSize="@dimen/text_trans_30px"
                android:paddingBottom="@dimen/trans_15px"/>
            <TextView
                android:id="@+id/old_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/trans_10px"
                android:layout_toRightOf="@id/goods_price"
                android:layout_alignBaseline="@id/goods_price"
                android:text="¥284.04"
                android:textColor="@color/font_grey"
                android:textSize="@dimen/text_trans_24px" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
    <TextView
        android:layout_width="0.3dp"
        android:layout_height="match_parent"
        android:background="@color/cutOffRule"
        android:layout_marginTop="@dimen/trans_20px"
        tools:ignore="Suspicious0dp" />


</LinearLayout>
