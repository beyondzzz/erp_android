    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/trans_20px"
                android:paddingRight="@dimen/trans_20px">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/trans_100px"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/trans_5px"
                        android:text="单位名称"
                        android:textColor="@color/font_grey"
                        android:textSize="@dimen/text_trans_27px"/>
                    <EditText
                        android:id="@+id/unitName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/trans_80px"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/text_trans_27px"
                        android:background="@null"
                        style="?android:attr/textViewStyle"
                        android:maxLength="50"
                        android:hint="请填写单位名称"/>

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/cutOffrule" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/trans_100px"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/trans_5px"
                        android:text="纳税人识别码"
                        android:textColor="@color/font_grey"
                        android:textSize="@dimen/text_trans_27px"/>
                    <EditText
                        android:id="@+id/taxpayerIdentificationNumber"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/trans_27px"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/text_trans_27px"
                        android:maxLength="25"
                        android:background="@null"
                        style="?android:attr/textViewStyle"
                        android:hint="请填写纳税人识别码"/>

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/cutOffrule" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/trans_100px"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/trans_5px"
                        android:text="注册地址"
                        android:textColor="@color/font_grey"
                        android:textSize="@dimen/text_trans_27px"/>
                    <EditText
                        android:id="@+id/registeredAddress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/trans_80px"
                        android:maxLength="100"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/text_trans_27px"
                        android:background="@null"
                        style="?android:attr/textViewStyle"
                        android:hint="请填写注册地址"/>

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/cutOffrule" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/trans_100px"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/trans_5px"
                        android:text="注册电话"
                        android:textColor="@color/font_grey"
                        android:textSize="@dimen/text_trans_27px"/>
                    <EditText
                        android:id="@+id/registeredTel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/trans_80px"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/text_trans_27px"
                        android:background="@null"
                        android:maxLength="20"
                        style="?android:attr/textViewStyle"
                        android:hint="请填写注册电话"/>

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/cutOffrule" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/trans_100px"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/trans_5px"
                        android:text="开户银行"
                        android:textColor="@color/font_grey"
                        android:textSize="@dimen/text_trans_27px"/>
                    <EditText
                        android:id="@+id/depositBank"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/trans_80px"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/text_trans_27px"
                        android:maxLength="25"
                        android:background="@null"
                        style="?android:attr/textViewStyle"
                        android:hint="请填写开户银行"/>

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/cutOffrule" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/trans_100px"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/trans_5px"
                        android:text="银行账户"
                        android:textColor="@color/font_grey"
                        android:textSize="@dimen/text_trans_27px"/>
                    <EditText
                        android:id="@+id/bankAccount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/trans_80px"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/text_trans_27px"
                        android:maxLength="20"
                        android:background="@null"
                        style="?android:attr/textViewStyle"
                        android:hint="请填写银行账户"/>

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/cutOffrule" />
            </LinearLayout>
            <LinearLayout
