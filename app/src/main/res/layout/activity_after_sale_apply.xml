<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/after_sale_apply_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f0f2f5">
    <!--页面标题-->
    <RelativeLayout
        android:id="@+id/order_tracing_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/trans_30px"
        android:background="@color/white">

        <ImageView
            android:id="@+id/btn_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/trans_5px"
            android:src="@drawable/shoplist_return"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请售后"
            android:layout_centerInParent="true"
            android:textSize="@dimen/text_trans_35px"
            android:textColor="@color/trans_333333" />
        <TextView
            android:id="@+id/commit_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/text_trans_27px"
            android:textColor="@color/checkGreenColor" />
    </RelativeLayout>
    <TextView android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/trans_666666"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--商品列表信息-->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/trans_20px"
                android:background="#f0f2f5"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/trans_20px"
                android:paddingRight="@dimen/trans_20px"
                android:layout_marginTop="@dimen/trans_25px"
                android:layout_marginBottom="@dimen/trans_25px">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="服务类型"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_trans_27px"
                    android:layout_marginBottom="@dimen/trans_20px"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/return_goods"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="退货"
                        android:textSize="@dimen/text_trans_27px"
                        android:textColor="@color/font_grey"
                        android:background="@drawable/btn_aftermarket_gray"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/change_goods"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="换货"
                        android:textSize="@dimen/text_trans_27px"
                        android:textColor="@color/font_grey"
                        android:background="@drawable/btn_aftermarket_gray"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/trans_30px"
                        android:layout_marginRight="@dimen/trans_30px"/>
                    <TextView
                        android:id="@+id/other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="其他"
                        android:textSize="@dimen/text_trans_27px"
                        android:textColor="@color/font_grey"
                        android:background="@drawable/btn_aftermarket_gray"
                        android:gravity="center"/>
                </LinearLayout>


            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/trans_20px"
                android:background="#f0f2f5"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/trans_25px"
                android:layout_marginBottom="@dimen/trans_25px">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="问题描述"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_trans_27px"
                    android:layout_marginBottom="@dimen/trans_30px"
                    android:layout_marginLeft="@dimen/trans_20px"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/trans_160px"
                    android:background="#f0f2f5">
                    <EditText
                        android:id="@+id/describe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="500"
                        android:hint="请详细描述问题，500字以内。"
                        android:background="@null"
                        style="?android:attr/textViewStyle"
                        android:padding="@dimen/trans_20px"
                        android:textSize="@dimen/text_trans_27px"/>

                    <TextView
                        android:id="@+id/length_limit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginBottom="9dp"
                        android:layout_marginEnd="12dp"
                        android:text="0/500"
                        android:textColor="@color/moreText"
                        android:textSize="@dimen/text_trans_24px" />
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="图片上传"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_trans_27px"
                    android:layout_marginTop="@dimen/trans_30px"
                    android:layout_marginBottom="@dimen/trans_15px"
                    android:layout_marginLeft="@dimen/trans_20px"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/trans_20px"
                    android:layout_marginRight="@dimen/trans_100px"
                    android:layout_marginBottom="@dimen/trans_20px"
                    android:textColor="@color/font_grey"
                    android:textSize="@dimen/text_trans_22px"
                    android:text="非必填项。最多上传5张图片，仅支持jpg、jpeg、png、bmp格式，单张不超过5M。"/>
                <!--<android.support.v7.widget.RecyclerView-->
                    <!--android:id="@+id/imgRecyclerView"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginLeft="@dimen/trans_20px"/>-->

                <com.yzs.imageshowpickerview.ImageShowPickerView
                    android:id="@+id/it_picker_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:is_show_del="true"
                    android:layout_marginLeft="@dimen/trans_20px"
                    android:layout_marginRight="@dimen/trans_20px"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/trans_20px"
                android:background="#f0f2f5"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/trans_20px"
                android:paddingRight="@dimen/trans_20px"
                android:layout_marginTop="@dimen/trans_35px"
                android:layout_marginBottom="@dimen/trans_25px">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="联系方式"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_trans_27px"
                    android:layout_marginBottom="@dimen/trans_30px"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名："
                    android:textSize="@dimen/text_trans_27px"
                    android:textColor="@color/trans_666666"/>
                    <EditText
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_trans_27px"
                        android:textColor="@color/font_grey"
                        android:background="@drawable/input_aftermarket_gray"
                        style="?android:attr/textViewStyle"
                        android:maxLength="5"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2-5个字"
                        android:textSize="@dimen/text_trans_24px"
                        android:textColor="@color/font_grey"
                        android:layout_marginLeft="@dimen/trans_25px"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/trans_30px">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手机："
                        android:textSize="@dimen/text_trans_27px"
                        android:textColor="@color/trans_666666"/>
                    <EditText
                        android:id="@+id/phone_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_trans_27px"
                        android:textColor="@color/font_grey"
                        android:background="@drawable/input_aftermarket_gray"
                        style="?android:attr/textViewStyle"
                        android:maxLength="11"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11位数字"
                        android:textSize="@dimen/text_trans_24px"
                        android:textColor="@color/font_grey"
                        android:digits="0123456789"
                        android:layout_marginLeft="@dimen/trans_25px"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/trans_30px"
                    android:textColor="@color/font_grey"
                    android:textSize="@dimen/text_trans_24px"
                    android:text="提交服务单后，售后客服可能与您电话沟通，请保持手机畅通。"/>

            </LinearLayout>





        </LinearLayout>
    </ScrollView>
</LinearLayout>
