<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/trans_160px">


    <LinearLayout
        android:id="@+id/line_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/start_line"
            android:layout_width="0.5dp"
            android:layout_height="0dp"
            android:background="@color/cutOffRule"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/trans_22px"
            android:layout_height="@dimen/trans_22px"
            android:src="@drawable/icon_point_gray"/>
        <TextView
            android:id="@+id/end_line"
            android:layout_width="0.5dp"
            android:layout_height="0dp"
            android:background="@color/cutOffRule"
            android:layout_weight="1"/>

    </LinearLayout>



    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/trans_35px"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/line_view"
            android:layout_alignBottom="@id/line_view">

            <TextView
                android:id="@+id/state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已签收，签收人：范小雨"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_trans_27px"/>
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/trans_666666"
            android:text="2017-06-01 11:16:08"
            android:textSize="@dimen/text_trans_24px"
            android:layout_marginBottom="@dimen/trans_30px"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/cutOffRule"
            android:layout_marginRight="@dimen/trans_25px"/>

        </LinearLayout>


</RelativeLayout>
