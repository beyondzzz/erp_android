<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/trans_20px"
    android:paddingRight="@dimen/trans_20px"
    android:background="@color/white"
    android:focusableInTouchMode="true"
    android:focusable="true">
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/trans_30px">

        <ImageView
            android:id="@+id/return_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/trans_10px"
            android:src="@drawable/shoplist_return" />

        <TextView
            android:id="@+id/page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="绑定手机号"
            android:textColor="@color/trans_333333"
            android:textSize="@dimen/text_trans_35px" />
        <TextView
            android:id="@+id/add_page_top_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/delete"
            android:textSize="@dimen/text_trans_27px"
            android:textColor="@color/moreText"
            android:visibility="gone"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/cut_off_rule"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/cutOffRule"
        android:layout_below="@id/title"/>
    <!--上-->
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/cut_off_rule">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="您好，为了提供更好的服务，请绑定手机号！"
            android:textColor="@color/font_grey"
            android:textSize="@dimen/text_trans_24px"
            android:layout_marginTop="@dimen/trans_20px"
            android:layout_marginBottom="@dimen/trans_20px"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/cutOffRule"/>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/trans_60px"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_phone"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/trans_15px"
            android:layout_marginLeft="@dimen/trans_15px"/>
        <EditText
            android:id="@+id/phone_number"
            android:layout_width="0dp"
            android:layout_height="@dimen/trans_100px"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入手机号"
            android:digits="1234567890"
            android:maxLength="11"
            style="?android:attr/textViewStyle"
            android:textSize="@dimen/text_trans_32px"
            android:text=""/>

    </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/cutOffRule"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/trans_60px"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_pwd"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/trans_15px"
                android:layout_marginLeft="@dimen/trans_15px"/>
            <EditText
                android:id="@+id/password"
                android:layout_width="0dp"
                android:layout_height="@dimen/trans_100px"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入动态密码"
                android:digits="1234567890"
                style="?android:attr/textViewStyle"
                android:textSize="@dimen/text_trans_32px"
                android:text=""/>
            <TextView
                android:id="@+id/get_code"
                android:layout_width="@dimen/trans_220px"
                android:layout_height="@dimen/trans_55px"
                android:background="@drawable/btn_orange"
                android:layout_gravity="center_vertical"
                android:text="获取动态密码"
                android:gravity="center"
                android:textSize="@dimen/text_trans_24px"
                android:cursorVisible="false"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/cutOffRule"/>
        <TextView
            android:id="@+id/tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_trans_21px"
            android:paddingLeft="@dimen/trans_10px"
            android:paddingRight="@dimen/trans_10px"
            android:layout_marginTop="@dimen/trans_20px"
            android:shadowColor="#00ffffff"
            android:textColorHighlight="#00ffffff"
            android:textColor="#808080"
            android:text="提示：未注册百度账号的手机号,登录时将自动注册百度账号,且代表您已同意《注册协议》"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
                <TextView
                    android:id="@+id/login"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/trans_100px"
                    android:background="@drawable/btn_login"
                    android:text="登录"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_trans_32px"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/trans_100px"
                    android:layout_marginBottom="@dimen/trans_35px"/>
        </LinearLayout>
    </LinearLayout>
    <!--下-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/trans_50px">

        <!--Three Line-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/text_trans_24px"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="遇到问题？请"
            android:layout_marginRight="@dimen/trans_1px"/>
        <TextView
            android:id="@+id/connect_server"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/text_trans_24px"
            android:textStyle="bold"
            android:textColor="@color/checkGreenColor"
            android:text="联系客服"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
