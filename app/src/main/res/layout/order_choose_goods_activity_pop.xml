<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

<TextView
    android:id="@+id/activity_prompt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="提示:购买数量大于活动最大购买数量时，超出数量按原价进行计算。"
    android:textColor="@color/moreText"
    android:textSize="@dimen/text_trans_24px"
    android:padding="@dimen/trans_10px"
    android:layout_alignParentBottom="true"
    android:background="@color/ashenBackgroundColor"
    />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:id="@+id/choose_goods_activity_popup"
        android:layout_above="@id/activity_prompt"
        >
        <ImageView
            android:id="@+id/close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_close_gray"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/trans_20px"
            android:layout_marginTop="@dimen/trans_20px"
            />

        <TextView
            android:id="@+id/activity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/trans_25px"
            android:layout_marginTop="@dimen/trans_40px"
            android:text="购物车中商品所参与的活动"
            android:textColor="@color/moreText"
            android:layout_marginLeft="@dimen/trans_20px"
            android:textSize="@dimen/text_trans_26px"
            android:layout_centerHorizontal="true"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/choose_goods_activity_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/activity_title"
            >

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>

</RelativeLayout>
