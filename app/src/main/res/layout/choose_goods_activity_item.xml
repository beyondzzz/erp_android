<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/trans_20px">
        <TextView
            android:id="@+id/shop_cart_activity_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_full_reduction"
            android:layout_marginLeft="@dimen/trans_35px"
            android:text="满减"
            android:textSize="@dimen/text_trans_22px"
            android:gravity="center"
            android:textColor="@color/red"
            />
        <TextView
            android:id="@+id/activity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/shop_cart_activity_type"
            android:text="购满2件，总价可打8.0折"
            android:textColor="@color/trans_333333"
            android:textSize="@dimen/text_trans_24px"
            android:layout_marginLeft="@dimen/trans_25px"
            android:layout_centerVertical="true"
            />
        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/trans_40px"
            android:text="@string/more"
            android:textSize="@dimen/text_trans_22px"
            android:textColor="@color/red"
            />-->
    </RelativeLayout>
