<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f0f2f5">
    <LinearLayout
        android:id="@+id/parent_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">
    <!--页面标题-->
    <RelativeLayout
        android:id="@+id/order_tracing_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/trans_30px"
        android:background="@color/white">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/trans_5px"
            android:src="@drawable/shoplist_return"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="售后详情"
            android:layout_centerInParent="true"
            android:textSize="@dimen/text_trans_35px"
            android:textColor="@color/trans_333333" />
    </RelativeLayout>
    <TextView android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/trans_666666"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--商品列表信息-->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/trans_20px"
                android:background="#f0f2f5"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/trans_20px"
                android:paddingRight="@dimen/trans_20px"
                android:layout_marginTop="@dimen/trans_25px"
                android:layout_marginBottom="@dimen/trans_25px">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="服务类型"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_trans_27px"
                    android:layout_marginBottom="@dimen/trans_20px"/>
                <TextView
                    android:id="@+id/service_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退货"
                    android:textSize="@dimen/text_trans_27px"
                    android:textColor="@color/font_grey"
                    android:background="@drawable/btn_aftermarket_gray"
                    android:gravity="center"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/trans_20px"
                android:background="#f0f2f5"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/trans_20px"
                android:layout_marginTop="@dimen/trans_25px"
                android:layout_marginBottom="@dimen/trans_25px">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="问题描述"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_trans_27px"
                    android:layout_marginBottom="@dimen/trans_30px"/>
                <TextView
                    android:id="@+id/problem_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="问题描述问题描述问题描述问题描述问题描述问题描述问题描述问题描述问题描述问题描述问题"
                    android:textSize="@dimen/text_trans_24px"
                    android:textColor="@color/font_grey"
                    android:layout_marginBottom="@dimen/trans_40px"
                    android:layout_marginRight="@dimen/trans_60px"/>

                <TextView
                    android:id="@+id/pic_sc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="图片上传"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_trans_27px"
                    android:layout_marginBottom="@dimen/trans_25px"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/imgRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/trans_20px"/>


            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/trans_20px"
                android:background="#f0f2f5"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/trans_20px"
                android:paddingRight="@dimen/trans_20px"
                android:layout_marginTop="@dimen/trans_35px"
                android:layout_marginBottom="@dimen/trans_25px">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="联系方式"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_trans_27px"
                    android:layout_marginBottom="@dimen/trans_30px"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名："
                    android:textSize="@dimen/text_trans_27px"
                    android:textColor="@color/font_grey"/>
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="张三"
                        android:textSize="@dimen/text_trans_27px"
                        android:textColor="@color/font_grey"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/trans_20px">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手机："
                        android:textSize="@dimen/text_trans_27px"
                        android:textColor="@color/font_grey"/>
                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13038886556"
                        android:textSize="@dimen/text_trans_27px"
                        android:textColor="@color/font_grey"/>
                </LinearLayout>


            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/trans_20px"
                android:background="#f0f2f5"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/trans_20px"
                android:paddingRight="@dimen/trans_20px"
                android:layout_marginTop="@dimen/trans_25px"
                android:layout_marginBottom="@dimen/trans_30px">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="售后进度"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/text_trans_27px"
                    android:layout_marginBottom="@dimen/trans_30px"/>
                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已完成"
                    android:textSize="@dimen/text_trans_27px"
                    android:textColor="@color/font_grey"/>

            </LinearLayout>




        </LinearLayout>
    </ScrollView>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/parent_photo_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#ff000000">

        <ImageView
            android:id="@+id/bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ff000000" />

        <com.bm.library.PhotoView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>


</LinearLayout>
