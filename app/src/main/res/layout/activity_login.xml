<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/trans_20px"
    android:paddingRight="@dimen/trans_20px"
    android:background="@color/white"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:id="@+id/activity_login">
    <!--上-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

       <!-- <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/black"
            android:textSize="@dimen/text_trans_35px"
            android:layout_marginTop="@dimen/trans_20px"
            android:textStyle="bold" />-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_baidu_logo"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/trans_90px"
            android:layout_marginBottom="@dimen/trans_100px"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/cutOffRule"/>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/trans_60px"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_phone"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/trans_15px"
            android:layout_marginLeft="@dimen/trans_15px"/>
        <EditText
            android:id="@+id/phone_number"
            android:layout_width="0dp"
            android:layout_height="@dimen/trans_100px"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入手机号"
            android:digits="1234567890"
            android:maxLength="11"
            style="?android:attr/textViewStyle"
            android:textSize="@dimen/text_trans_32px"
            android:text=""/>

    </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/cutOffRule"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/trans_60px"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_pwd"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/trans_15px"
                android:layout_marginLeft="@dimen/trans_15px"/>
            <EditText
                android:id="@+id/password"
                android:layout_width="0dp"
                android:layout_height="@dimen/trans_100px"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入动态密码"
                android:digits="1234567890"
                style="?android:attr/textViewStyle"
                android:textSize="@dimen/text_trans_32px"
                android:text=""/>
            <TextView
                android:id="@+id/get_code"
                android:layout_width="@dimen/trans_220px"
                android:layout_height="@dimen/trans_55px"
                android:background="@drawable/btn_orange"
                android:layout_gravity="center_vertical"
                android:text="获取动态密码"
                android:gravity="center"
                android:textSize="@dimen/text_trans_24px"
                android:cursorVisible="false"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/cutOffRule"/>
        <TextView
            android:id="@+id/tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_trans_21px"
            android:paddingLeft="@dimen/trans_10px"
            android:paddingRight="@dimen/trans_10px"
            android:layout_marginTop="@dimen/trans_20px"
            android:shadowColor="#00ffffff"
            android:textColorHighlight="#00ffffff"
            android:textColor="#808080"
            android:text="提示：未注册百度账号的手机号,登录时将自动注册百度账号,且代表您已同意《注册协议》"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">
                <TextView
                    android:id="@+id/login"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/trans_100px"
                    android:background="@drawable/btn_login"
                    android:text="登录"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_trans_32px"
                    android:gravity="center"
                    android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    <!--下-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <!--One Line-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_height="0.3dp"
                android:background="@color/cutOffRule"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="其他方式登录"
                android:textColor="@color/trans_666666"
                android:textSize="@dimen/text_trans_24px"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="0.3dp"
                android:background="@color/cutOffRule"
                android:layout_weight="1"/>
        </LinearLayout>

        <!--Tow Line-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/trans_60px"
            android:layout_marginBottom="@dimen/trans_70px">
            <LinearLayout
                android:id="@+id/QQ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/trans_80px"
                android:layout_marginRight="@dimen/trans_80px">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/round_qq"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/trans_25px"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_trans_30px"
                    android:text="QQ"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/VX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_toLeftOf="@id/QQ">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/round_webchat"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/trans_25px"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_trans_30px"
                    android:text="微信"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ZFB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_toRightOf="@id/QQ">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/round_zfb"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/trans_25px"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_trans_30px"
                    android:text="支付宝"/>
            </LinearLayout>

        </RelativeLayout>
        <!--Three Line-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/text_trans_24px"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="遇到问题？请"
            android:layout_marginRight="@dimen/trans_1px"/>
        <TextView
            android:id="@+id/connect_server"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/text_trans_24px"
            android:textStyle="bold"
            android:textColor="@color/checkGreenColor"
            android:text="联系客服"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
