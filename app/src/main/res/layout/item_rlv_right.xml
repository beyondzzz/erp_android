<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginTop="@dimen/trans_22px"
    android:layout_marginBottom="@dimen/trans_22px">

    <ImageView
        android:id="@+id/iv_classify"
        android:layout_width="@dimen/trans_130px"
        android:layout_height="@dimen/trans_130px"
        android:src="@drawable/img_steamed"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_foods_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_classify"
        android:layout_marginTop="@dimen/trans_13px"
        android:gravity="center"
        android:text="包子"
        android:textSize="@dimen/text_trans_24px" />
</RelativeLayout>
