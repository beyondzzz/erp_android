<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/goods_msg_evaluation_gf"
        android:layout_width="match_parent"
        android:layout_height="@dimen/trans_1px"
        android:background="@color/cutOffRule"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/trans_25px"
        android:layout_marginBottom="@dimen/trans_30px"
        >
        <TextView
            android:id="@+id/goods_msg_evaluation_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user"
            android:textSize="@dimen/text_trans_24px"
            android:textColor="@color/trans_333333"
            />
        <TextView
            android:id="@+id/evaluation_user_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/goods_msg_evaluation_user"
            android:text="153****9834"
            android:textSize="@dimen/text_trans_24px"
            android:textColor="@color/trans_333333"
            android:layout_marginLeft="@dimen/trans_15px"
            android:layout_centerVertical="true"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/evaluation_star1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_star_yellow_s"
                android:layout_marginLeft="@dimen/trans_15px"
                />
            <ImageView
                android:id="@+id/evaluation_star2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_star_yellow_s"
                android:layout_marginLeft="@dimen/trans_15px"
                />
            <ImageView
                android:id="@+id/evaluation_star3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_star_yellow_s"
                android:layout_marginLeft="@dimen/trans_15px"
                />
            <ImageView
                android:id="@+id/evaluation_star4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_star_yellow_s"
                android:layout_marginLeft="@dimen/trans_15px"
                />
            <ImageView
                android:id="@+id/evaluation_star5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_star_gray_s"
                android:layout_marginLeft="@dimen/trans_15px"
                />
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/evaluation_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="包装很棒，没有一个损坏的，很新鲜的样子，外面的一层
还是润的，按照说明书，先放在外面透气的地方干燥好，后面吃了再来追评，反正好吃肯定会再来光顾的"
        android:textSize="@dimen/text_trans_27px"
        android:textColor="@color/trans_333333"
        android:lineSpacingExtra="@dimen/trans_10px"
        android:layout_marginBottom="@dimen/trans_35px"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/evaluation_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/trans_30px"/>
</LinearLayout>
