<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/trans_20px">

        <TextView
            android:id="@+id/shop_cart_activity_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/trans_35px"
            android:background="@drawable/btn_full_reduction"
            android:gravity="center"
            android:text="满减"
            android:textColor="@color/red"
            android:textSize="@dimen/text_trans_22px"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/activity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/trans_25px"
            android:layout_toRightOf="@id/shop_cart_activity_type"
            android:layout_toLeftOf="@id/is_has_choose"
            android:layout_marginRight="@dimen/trans_10px"
            android:text="购满2件，总价可打8.0折"
            android:textColor="@color/trans_333333"
            android:textSize="@dimen/text_trans_24px" />

        <ImageView
            android:id="@+id/is_has_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/trans_40px"
            android:src="@drawable/icon_location_checkmark_green"
            android:visibility="gone" />

        <TextView
            android:id="@+id/activity_information_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:visibility="gone"
            />
    </RelativeLayout>
    <!-- <TextView
         android:layout_width="match_parent"
         android:layout_height="0.5dp"
         android:background="@color/cutOffRule"
         />-->
</LinearLayout>
