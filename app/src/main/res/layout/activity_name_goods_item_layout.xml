<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/trans_15px"
    android:layout_marginLeft="@dimen/trans_5px"
    android:layout_marginRight="@dimen/trans_5px"
    android:layout_marginTop="@dimen/trans_15px"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/goods_img"
        android:layout_width="@dimen/trans_150px"
        android:layout_height="@dimen/trans_150px"
        android:src="@drawable/img_goods1" />

    <TextView
        android:id="@+id/goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/trans_15px"
        android:text="乐肴居"
        android:textColor="@color/black"
        android:textSize="@dimen/text_trans_30px" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/trans_10px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textColor="@color/orangePriceColor"
            android:textSize="@dimen/text_trans_24px" />
        <TextView
            android:id="@+id/goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="284.04"
            android:textColor="@color/orangePriceColor"
            android:textSize="@dimen/text_trans_30px" />

    </LinearLayout>
    <TextView
        android:id="@+id/old_goods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/goods_price"
        android:text="¥284.04"
        android:textColor="@color/font_grey"
        android:textSize="@dimen/text_trans_24px" />

</LinearLayout>
