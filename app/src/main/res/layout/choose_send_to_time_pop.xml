<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/choose_time_bottom_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/checkGreenColor"
        android:gravity="center"
        android:paddingBottom="@dimen/trans_30px"
        android:paddingTop="@dimen/trans_30px"
        android:text="@string/ok"
        android:textColor="@color/white"
        android:textSize="@dimen/text_trans_32px"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/choose_time_bottom_btn"
        android:orientation="vertical"
        android:background="@color/white"
        android:id="@+id/choose_time_popup"
        >
        <ImageView
            android:id="@+id/close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_close_gray"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/trans_20px"
            android:layout_marginTop="@dimen/trans_20px"
            />

        <TextView
            android:id="@+id/delivery_to_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/trans_25px"
            android:layout_marginTop="@dimen/trans_40px"
            android:text="选择送货时间"
            android:textColor="@color/trans_333333"
            android:textSize="@dimen/text_trans_40px"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/fg_1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/cutOffRule"
            android:layout_below="@+id/delivery_to_name"
            />
        <LinearLayout
            android:id="@+id/time_linear_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/fg_1"
            android:layout_marginLeft="@dimen/trans_15px"
            android:layout_marginRight="@dimen/trans_15px"
            android:layout_marginTop="@dimen/trans_40px"
            android:visibility="visible"
            >
            <TextView
                android:id="@+id/send_time_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="7月11日"
                android:textSize="@dimen/text_trans_24px"
                android:textColor="@color/trans_333333"
                android:gravity="center"
                android:layout_marginRight="@dimen/trans_15px"
                android:layout_marginLeft="@dimen/trans_15px"
                android:background="@drawable/send_to_time_gray_background"
                />
            <TextView
                android:id="@+id/send_time_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="7月11日"
                android:textSize="@dimen/text_trans_24px"
                android:textColor="@color/trans_333333"
                android:gravity="center"
                android:layout_marginRight="@dimen/trans_15px"
                android:layout_marginLeft="@dimen/trans_15px"
                android:background="@drawable/send_to_time_gray_background"/>
            <TextView
                android:id="@+id/send_time_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="7月11日"
                android:textSize="@dimen/text_trans_24px"
                android:textColor="@color/trans_333333"
                android:gravity="center"
                android:layout_marginRight="@dimen/trans_15px"
                android:layout_marginLeft="@dimen/trans_15px"
                android:background="@drawable/send_to_time_gray_background"/>
            <TextView
                android:id="@+id/send_time_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="7月11日"
                android:textSize="@dimen/text_trans_24px"
                android:textColor="@color/trans_333333"
                android:gravity="center"
                android:layout_marginRight="@dimen/trans_15px"
                android:layout_marginLeft="@dimen/trans_15px"
                android:background="@drawable/send_to_time_gray_background"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/time_linear_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/time_linear_1"
            android:layout_marginLeft="@dimen/trans_15px"
            android:layout_marginRight="@dimen/trans_15px"
            android:layout_marginTop="@dimen/trans_15px"
            android:paddingBottom="@dimen/trans_100px"
            android:visibility="visible"
            >
            <TextView
                android:id="@+id/send_time_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="7月11日"
                android:textSize="@dimen/text_trans_24px"
                android:textColor="@color/trans_333333"
                android:gravity="center"
                android:layout_marginRight="@dimen/trans_15px"
                android:layout_marginLeft="@dimen/trans_15px"
                android:background="@drawable/send_to_time_gray_background"
                />
            <TextView
                android:id="@+id/send_time_6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="7月11日"
                android:textSize="@dimen/text_trans_24px"
                android:textColor="@color/trans_333333"
                android:gravity="center"
                android:layout_marginRight="@dimen/trans_15px"
                android:layout_marginLeft="@dimen/trans_15px"
                android:background="@drawable/send_to_time_gray_background"/>
            <TextView
                android:id="@+id/send_time_7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="7月11日"
                android:textSize="@dimen/text_trans_24px"
                android:textColor="@color/trans_333333"
                android:gravity="center"
                android:layout_marginRight="@dimen/trans_15px"
                android:layout_marginLeft="@dimen/trans_15px"
                android:background="@drawable/send_to_time_gray_background"/>
            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="7月11日"
                android:textSize="@dimen/text_trans_24px"
                android:textColor="@color/trans_333333"
                android:gravity="center"
                android:layout_marginRight="@dimen/trans_15px"
                android:layout_marginLeft="@dimen/trans_15px"
                android:background="@drawable/send_to_time_gray_background"
                android:visibility="invisible"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/presell_send_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/trans_40px"
            android:paddingBottom="@dimen/trans_40px"
            android:layout_below="@id/fg_1"
            android:text="送货时间为活动结束后7日内(结束时间:2018-08-20)"
            android:gravity="center"
            android:textSize="@dimen/text_trans_26px"
            android:visibility="gone"
            />
    </RelativeLayout>

</RelativeLayout>
