<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_number_state"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/trans_15px"
        android:layout_marginBottom="@dimen/trans_15px"
        android:layout_marginLeft="@dimen/trans_20px"
        android:layout_marginRight="@dimen/trans_20px">

        <TextView
            android:id="@+id/tv_order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="@dimen/text_trans_24px"
            android:textColor="@color/trans_333333"/>

        <TextView
            android:id="@+id/tv_finish_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="@string/app_name"
            android:textSize="@dimen/text_trans_24px"
            android:textColor="@color/moreText"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/rl_number_state"
        android:background="@color/cutOffRule"
        android:layout_marginLeft="@dimen/trans_20px"
        android:layout_marginRight="@dimen/trans_20px"
        />

    <RelativeLayout
        android:id="@+id/rl_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_line"
        android:padding="@dimen/trans_20px">

        <ImageView
            android:id="@+id/iv_goods"
            android:layout_width="@dimen/trans_100px"
            android:layout_height="@dimen/trans_100px"
            android:src="@drawable/img_steamed" />

        <TextView
            android:id="@+id/tv_goods_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_alignTop="@+id/iv_goods"
            android:layout_toRightOf="@+id/iv_goods"
            android:layout_toLeftOf="@id/tv_goods_pirce"
            android:textSize="@dimen/text_trans_27px"
            android:text=" 发的时答附近酒店健身房健身的回的撒旦几点"
            android:textColor="@color/black"
            />
       <!-- <TextView
            android:id="@+id/tv_goods_spec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_below="@id/tv_goods_title"
            android:layout_toRightOf="@+id/iv_goods"
            android:textSize="@dimen/text_trans_27px"
            android:text=" 发的时答附近"
            android:textColor="@color/black"
            android:singleLine="true"
            />-->
        <TextView
            android:id="@+id/tv_goods_pirce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/order_goods_price"
            android:text="@string/RMB"
            android:textSize="@dimen/text_trans_30px"
            android:textColor="@color/moreText"
            android:layout_marginLeft="@dimen/trans_15px"
            />
        <TextView
            android:id="@+id/order_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="284.04"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/text_trans_30px"
            android:textColor="@color/moreText"
            />

        <TextView
            android:id="@+id/tv_goods_format"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_goods"
            android:layout_alignLeft="@id/tv_goods_title"
            android:layout_toRightOf="@+id/iv_goods"
            android:text="@string/app_name"
            android:textSize="@dimen/text_trans_24px"
            android:textColor="@color/moreText"/>

        <TextView
            android:id="@+id/tv_goods_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x"
            android:textSize="@dimen/text_trans_24px"
            android:textColor="@color/moreText"
            android:layout_toLeftOf="@id/order_goods_num"
            android:layout_alignTop="@id/order_goods_num"
            android:layout_marginRight="@dimen/trans_5px"
            />
        <TextView
            android:id="@+id/order_goods_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_goods"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/text_trans_24px"
            android:textColor="@color/moreText"
            android:text="1"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_line2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/rl_detail"
        android:layout_marginLeft="@dimen/trans_20px"
        android:layout_marginRight="@dimen/trans_20px"
        android:background="@color/cutOffRule" />

    <RelativeLayout
        android:id="@+id/rl_goods"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_line2"
        android:paddingRight="@dimen/trans_20px"
        android:paddingLeft="@dimen/trans_20px"
        android:paddingTop="@dimen/trans_10px"
        android:paddingBottom="@dimen/trans_10px">

        <TextView

            android:id="@+id/tv_all_money_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_trans_24px"
            android:textColor="@color/moreText"
            android:text="合计¥"
            android:layout_toLeftOf="@id/total_money"/>
        <TextView
            android:id="@+id/total_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_trans_24px"
            android:textColor="@color/moreText"
            android:text="33.00"
            android:layout_toLeftOf="@id/postage_unit_name1"
            />
        <TextView
            android:id="@+id/postage_unit_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_trans_24px"
            android:textColor="@color/moreText"
            android:text="(含运费¥"
            android:layout_toLeftOf="@id/postage_money"
            />
        <TextView
            android:id="@+id/postage_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_trans_24px"
            android:textColor="@color/moreText"
            android:text="8"
            android:layout_toLeftOf="@id/postage_unit_name2"
            />
        <TextView
            android:id="@+id/postage_unit_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_trans_24px"
            android:textColor="@color/moreText"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="元)"
            />

        <TextView
            android:id="@+id/tv_all_goods_num_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4"
            android:layout_toLeftOf="@id/tv_all_goods_num"
            android:text="共"
            android:textSize="@dimen/text_trans_24px"
            android:textColor="@color/moreText" />
        <TextView
            android:id="@+id/tv_all_goods_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="@dimen/text_trans_24px"
            android:textColor="@color/moreText"
            android:layout_toLeftOf="@id/tv_all_goods_num_name2"
            />
        <TextView
            android:id="@+id/tv_all_goods_num_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="件商品"
            android:textSize="@dimen/text_trans_24px"
            android:textColor="@color/moreText"
            android:layout_toLeftOf="@+id/tv_all_money_unit"
            android:layout_toStartOf="@+id/tv_all_money_unit"
            android:layout_marginRight="@dimen/trans_45px"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_line3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/rl_goods"
        android:background="@color/cutOffRule"
        android:layout_marginRight="@dimen/trans_20px"
        android:layout_marginLeft="@dimen/trans_20px"/>

    <TextView
        android:id="@+id/tv_evaluate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_line3"
        android:layout_marginBottom="@dimen/trans_15px"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/trans_15px"
        android:background="@drawable/text_evaluate_shape"
        android:text="评价订单"
        android:textColor="@color/checkGreenColor"
        android:textSize="@dimen/text_trans_27px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/tv_evaluate"
        android:background="@color/ashenBackgroundColor" />

</RelativeLayout>
