<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/trans_20px"
    android:orientation="vertical"
    android:paddingLeft="@dimen/trans_20px"
    android:paddingRight="@dimen/trans_20px"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/trans_20px"
        android:layout_marginBottom="@dimen/trans_20px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/goods_img"
            android:layout_width="@dimen/trans_100px"
            android:layout_height="@dimen/trans_100px"
            android:src="@drawable/img_steamed" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/trans_30px">

            <TextView
                android:id="@+id/goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="乐肴居冰皮麻糬（芒果慕斯味) 50克*10个*12袋/箱"
                android:textColor="@color/black"
                android:textSize="@dimen/text_trans_27px"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/price_unit"
                android:layout_marginRight="@dimen/trans_30px"

                />


            <TextView
                android:id="@+id/goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="284.04"
                android:textColor="@color/font_grey"
                android:textSize="@dimen/text_trans_30px" />

            <TextView
                android:id="@+id/price_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/goods_price"
                android:text="¥"
                android:textColor="@color/font_grey"
                android:textSize="@dimen/text_trans_30px" />

           <TextView
               android:id="@+id/my_order_goods_specification"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="12袋/1箱"
               android:layout_alignParentBottom="true"
               android:textSize="@dimen/text_trans_24px"
               android:textColor="@color/font_grey"
               />
            <TextView
                android:id="@+id/my_order_goods_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@id/my_order_goods_num"
                android:textSize="@dimen/text_trans_24px"
                android:textColor="@color/font_grey"
                android:layout_marginRight="@dimen/trans_10px"
                />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/cutOffrule" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/trans_10px"
        android:layout_marginTop="@dimen/trans_10px"
        >

        <TextView
            android:id="@+id/my_order_combined_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="33.00"
            android:textSize="@dimen/text_trans_24px"
            android:textColor="@color/font_grey"
            android:layout_toLeftOf="@id/my_order_freight_parentheses1"
            android:layout_marginRight="@dimen/trans_20px"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:id="@+id/my_order_combined_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合计¥"
            android:textSize="@dimen/text_trans_24px"
            android:textColor="@color/font_grey"
            android:layout_toLeftOf="@id/my_order_combined_num"
            />
        <TextView
            android:id="@+id/my_order_combined_goods_num_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="件商品"
            android:textSize="@dimen/text_trans_24px"
            android:textColor="@color/font_grey"
            android:layout_toLeftOf="@id/my_order_combined_name"
            android:layout_marginRight="@dimen/trans_20px"
            />
        <TextView
            android:id="@+id/my_order_combined_goods_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="@dimen/text_trans_24px"
            android:textColor="@color/font_grey"
            android:layout_toLeftOf="@id/my_order_combined_goods_num_name"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共"
            android:textSize="@dimen/text_trans_24px"
            android:textColor="@color/font_grey"
            android:layout_toLeftOf="@id/my_order_combined_goods_num"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/cutOffrule" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/trans_15px"
        android:paddingBottom="@dimen/trans_15px"
        >
        <TextView
            android:id="@+id/my_order_item_bottom_btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_order_default"
            android:layout_alignParentRight="true"
            android:text="@string/evaluation"
            android:gravity="center"
            android:textSize="@dimen/text_trans_27px"
            android:textColor="@color/checkGreenColor"
            />

    </RelativeLayout>

</LinearLayout>
