<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

        <FrameLayout
            android:id="@+id/framelayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <!-- bottom -->
        <TextView android:layout_width="match_parent"
            android:layout_height="@dimen/trans_1px"
            android:background="@color/trans_666666"/>
        <RadioGroup
            android:id="@+id/rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:padding="@dimen/trans_10px" >

            <RadioButton
                android:id="@+id/rb1"
                style="@style/radioButtonStyle"
                android:checked="true"
                android:drawableTop="@drawable/radiobuttonchecked_icon1"
                android:text="首页" />

            <RadioButton
                android:id="@+id/rb2"
                style="@style/radioButtonStyle"
                android:drawableTop="@drawable/radiobuttonchecked_icon2"
                android:text="分类" />

            <RadioButton
                android:id="@+id/rb3"
                style="@style/radioButtonStyle"
                android:drawableTop="@drawable/radiobuttonchecked_icon3"
                android:text="购物车" />

            <RadioButton
                android:id="@+id/rb4"
                style="@style/radioButtonStyle"
                android:drawableTop="@drawable/radiobuttonchecked_icon4"
                android:text="我的" />
        </RadioGroup>
        <!-- end bottom -->


</LinearLayout>
